# Production Environment Variables Template
# Copy this to .env in production and fill in actual values

# ============================================
# REQUIRED - Database
# ============================================
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# ============================================
# REQUIRED - Session Security
# ============================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_MIN_32_CHARS

# ============================================
# REQUIRED - App Configuration
# ============================================
APP_URL=https://your-domain.com
NODE_ENV=production
PORT=5000

# ============================================
# REQUIRED - Push Notifications (VAPID Keys)
# ============================================
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_SUBJECT=mailto:your-email@example.com

# ============================================
# OPTIONAL - Google OAuth
# ============================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_CALLBACK_URL=https://your-domain.com/api/auth/google/callback

# ============================================
# OPTIONAL - Email (Password Reset)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="LevelUp <noreply@yourapp.com>"

# ============================================
# OPTIONAL - Google Gemini AI
# ============================================
GEMINI_API_KEY=your-gemini-api-key-here
